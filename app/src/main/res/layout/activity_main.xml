<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/user_image_view"
        android:contentDescription="@string/image_desc"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:src="@drawable/logo_image"/>

    <TextView
        android:id="@+id/user_name_text_view"
        app:layout_constraintTop_toBottomOf="@id/user_image_view"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:text="@string/shop_name"
        android:textAlignment="center"
        android:textSize="50sp" />

    <EditText
        android:id="@+id/user_name_text_view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_height"
        android:hint="@string/user_name"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="@dimen/edit_text_text_size"
        app:layout_constraintTop_toBottomOf="@id/user_name_text_view"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/button_lets_shop"
        android:layout_width="180dp"
        android:layout_height="108dp"
        android:layout_marginStart="9dp"
        android:text="@string/button_text"
        android:textSize="@dimen/button_lets_shop_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_name_text_view1" />


</androidx.constraintlayout.widget.ConstraintLayout>