<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/user_image_view"
        android:contentDescription="@string/image_desc"
        app:layout_constraintTop_toBottomOf="@id/button_lets_shop"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:src="@drawable/logo_image"/>

    <TextView
        android:id="@+id/user_name_text_view"
        app:layout_constraintTop_toBottomOf="@id/user_image_view"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:text="@string/shop_name"
        android:textAlignment="center"
        android:textSize="50sp" />

    <Button
        android:id="@+id/button_add_perfume"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="50sp"
        android:text="@string/add_to_card"/>

    <ImageButton
        android:id="@+id/button_lets_shop"
        android:layout_width="106dp"
        android:layout_height="99dp"
        android:textSize="@dimen/button_lets_shop_text_size"
        android:background="@drawable/cart"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>